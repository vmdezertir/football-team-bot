{
  "name": "football-team-bot",
  "version": "0.0.1",
  "description": "A bot that helps track the life of your favorite football team",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@nestjs/bull": "^10.1.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@telegraf/session": "^2.0.0-beta.7",
    "axios": "^1.7.2",
    "axios-cache-interceptor": "^1.5.3",
    "bull": "^4.12.9",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "hbs": "^4.2.0",
    "ioredis": "^5.4.1",
    "kysely": "^0.27.3",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "nestjs-telegraf": "^2.7.0",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "telegraf": "^4.16.3",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/config": "^3.2.2",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "@types/bull": "^4.10.0",
    "@types/date-fns": "^2.6.0",
    "@types/express": "^4.17.17",
    "@types/lodash": "^4.17.1",
    "@types/node": "^20.3.1",
    "@types/pg": "^8.11.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "class-validator": "^0.14.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "_moduleAliases": {
    "@app": "../dist"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
